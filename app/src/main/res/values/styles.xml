<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BillManager.TextAppearance.Bold" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="BillManager.TextAppearance.Light" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="BillManager.TextAppearance.Light.Faded" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:alpha">0.4</item>
    </style>
    <style name="BillManager.TextAppearance.Light.Cursive" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_variant</item>
    </style>
    <style name="BillManager.TextAppearance.Normal" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="Widget.BillManager.Backdrop" parent="">
        <item name="background">@color/primary_variant</item>
    </style>

    <style name="BillManager.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/BillManager.TextAppearance.Normal</item>
    </style>

    <style name="BillManager.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">35dp</item>
        <item name="android:textAppearance">@style/BillManager.TextAppearance.Bold</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
    </style>


<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
<!--    </style>-->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_corner_shape</item>
    </style>

</resources>