<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background_rounded_corner_shape">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bill_description_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="TextView"
                style="@style/BillManager.TextAppearance.Bold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit_bill_menu_flow_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="20dp"
                app:srcCompat="@drawable/ic_twotone_more_vert_24"
                tools:srcCompat="@drawable/ic_twotone_more_vert_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_twotone_category_24"
                tools:srcCompat="@drawable/ic_twotone_category_24" />

            <TextView
                android:id="@+id/bill_category_dialog"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/primary_light"
                style="@style/BillManager.TextAppearance.Normal"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/category_debt"
                tools:srcCompat="@drawable/category_debt" />

            <TextView
                android:id="@+id/bill_value_dialog"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/primary_light"
                style="@style/BillManager.TextAppearance.Normal"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_due_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_twotone_history_toggle_off_24"
                tools:srcCompat="@drawable/ic_twotone_history_toggle_off_24" />

            <TextView
                android:id="@+id/due_date_dialog"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/primary_light"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="TextView"
                style="@style/BillManager.TextAppearance.Normal"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paid_on_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_twotone_check_circle_24"
                tools:srcCompat="@drawable/ic_twotone_check_circle_24"
                app:tint="@color/investment_green" />

            <TextView
                android:id="@+id/paid_on"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/investment_green"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="TextView"
                style="@style/BillManager.TextAppearance.Normal"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/toggle_paid_dialog"
            style="@style/BillManager.Button.Outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:textAllCaps="true" />


    </LinearLayout>
</layout>